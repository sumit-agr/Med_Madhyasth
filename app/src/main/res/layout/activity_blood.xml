<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodActivity"
    android:orientation="vertical"
    android:background="@drawable/final_try">
    <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar"/>

    <Button
        android:id="@+id/btndon"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="148dp"
        android:background="@drawable/blood_rounded"
        android:onClick="onDonateClick"
        android:text="Blood Donate" />

    <Button
        android:id="@+id/btnreq"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btndon"
        android:layout_centerInParent="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/blood_rounded"
        android:text="Blood Request" />

    <Button
        android:id="@+id/btninf"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnreq"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="358dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/blood_rounded"
        android:onClick="onInfoClick"
        android:text="Information" />

</RelativeLayout>